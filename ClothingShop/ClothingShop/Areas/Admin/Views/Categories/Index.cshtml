@model IEnumerable<ClothingShop.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Danh mục sản phẩm</h2>

<div style="padding: 0 0 5px 0">
    <button type="button" class="btn btn-primary">
        <a href="@Url.Action("Create")" class="text-light" style = "vertical-align: middle">
            Thêm loại sản phẩm mới
        </a>
    </button>
</div>

<div class="col-lg-9 search-area" style="padding: 0 0 5px 0">
    @using (Html.BeginForm())
    {
        @Html.TextBox("Search", "", new { @class = "form-control", placeholder = "Search..." })
    }
</div>

<table border="1" class="table table-bordered table-hover">
    <tr>
        <th>Tên danh mục</th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="vertical-align: middle">
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td style="vertical-align: middle">
                <div class="btn btn-warning">
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.CategoryID }, new { @class = "text-light" })
                </div>
                |
                <div class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "text-light" })
                </div>
            </td>
        </tr>
    }
</table>
