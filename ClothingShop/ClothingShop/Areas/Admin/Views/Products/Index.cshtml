@model IEnumerable<ClothingShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Danh sách sản phẩm</h2>

<div style="padding: 0 0 5px 0">
    <button type="button" class="btn btn-primary">
        <a href="@Url.Action("Create")" class="text-light" style = "vertical-align: middle">
        Thêm sản phẩm mới
        </a>
    </button>
</div>

<div class="col-lg-6 search-area" style="padding: 0 0 5px 0">
    @using (Html.BeginForm())
    {
        @Html.TextBox("Search", "", new { @class = "form-control", placeholder = "Search..." })
    }
</div>

<table border="1" class="table table-bordered table-hover">
    <tr style = "vertical-align: middle">
        <th>Hình ảnh</th>
        <th>Tên sản phẩm</th>
        <th>Giá</th>
        <th>Loại sản phẩm</th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Images/@item.ImagePro" />
            </td>
            <td style = "vertical-align: middle">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>

            <td style = "vertical-align: middle">
                @Html.DisplayFor(modelItem => item.price)
            </td>

            <td  style = "vertical-align: middle">
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td style = "vertical-align: middle">
                <div class="btn btn-warning">
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ProductID }, new { @class = "text-light" })
                </div>
                |
                <div class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "text-light" })
                </div>
            </td>
        </tr>
    }

</table>
